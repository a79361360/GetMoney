@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>登入</title>
<style>
*{padding:0; margin:0; box-sizing:border-box; font-size:.28rem;}
.wrap{max-width:640px; height:10.72rem; background:url(../images/wx_loginbg.jpg) center top no-repeat #089CDE; background-size:100%; margin:0 auto; position:relative;}
body:before,body:after,.wrap:before,.wrap:after{content:""; clear:both; height:.01rem; display:block; width:100%;}
input{outline:0; -web-kit-appearance:none; -moz-appearance:none;}
.content{position:absolute; left:.3rem; right:.3rem; top:50%; height:5rem; margin-top:-2.5rem; padding:.3rem; background:rgba(255,255,255,.8); border-radius:.2rem;-webkit-box-shadow:0 0 15px rgba(0, 0, 0, .5) , 0px 0px 5px rgba(0, 0, 0, .3) inset; -moz-box-shadow:0 0 15px rgba(0, 0, 0, .5) , 0px 0px 5px rgba(0, 0, 0, .3) inset; box-shadow:0 0 15px rgba(0, 0, 0, .5) , 0px 0px 5px rgba(0, 0, 0, .3) inset; display:flex; flex-direction:row; flex-wrap:wrap; align-content:flex-start; justify-content:center;}
.content .text{display:flex; width:100%; flex-direction:column; flex-wrap:wrap; align-items:center; height:2rem;}
.content .text div{width:100%; height:1rem; padding:.25rem 0; display:flex; justify-content:center;}
.content input{height:.5rem; border:0; border-bottom:.02rem dashed #bbb; background:transparent; width:80%;}
.content .btn{display:flex; width:80%; height:.8rem; flex-direction:row; justify-content:center}
.content .btn div{align-items:center; display:flex; justify-content:center; flex:1;}
.content .btn div button{
	width:1.5rem; height:.55rem; color:#045C00; border:.02rem solid #045C00; outline:0; -web-kit-appearance:none; -moz-appearance: none; border-radius:.1rem;
	-webkit-box-shadow:0 0 .15rem rgba(0, 0, 0, .5) , -.02rem -.02rem .05rem rgba(0, 0, 0, .5) inset;  
	-moz-box-shadow:0 0 .15rem rgba(0, 0, 0, .5) , -.02rem -.02rem .05rem rgba(0, 0, 0, .5) inset;  
	box-shadow:0 0 .15rem rgba(0, 0, 0, .5) , -.02rem -.02rem .05rem rgba(0, 0, 0, .5) inset;  
	background:#E7FBEA;
	background: -webkit-linear-gradient(#FEFDF3, #E7FBEA);
	background: -o-linear-gradient(#FEFDF3, #E7FBEA);
	background: -moz-linear-gradient(#FEFDF3, #E7FBEA);
	background: linear-gradient(#FEFDF3, #E7FBEA);
}
.content .quick{display:flex; width:100%; padding:.3rem 0; flex-direction:row; justify-content:center;}
.content .quick div{display:flex; justify-content:center; flex:1; flex-direction:column; flex-wrap:wrap; align-items:center;}
.content .quick div i,.content .quick div span{display:block; text-align:center;}
.content .quick div i{width:.7rem; height:.7rem; margin-bottom:.1rem;}
.content .quick div i img{height:100%; max-height:100%;}
.content .quick div span{font-size:.24rem;}
</style>
<script>
;(function(doc,win){var max=768,docEl=doc.documentElement,resizeEvt='orientationchange'in window?'orientationchange':'resize',fsize;recalc=function(){var clientWidth=docEl.clientWidth;var clientHeight=docEl.clientHeight;if(!clientWidth)return;if(clientWidth>=max){fsize=100;docEl.style.fontSize='100px'}else{fsize=100*clientWidth/max;docEl.style.fontSize=100*clientWidth/max+'px'}var wrap=document.getElementsByClassName('wrap');var wh=fsize*10.72;if(wh<clientHeight){wh=clientHeight}document.getElementById("wrap").style.height=wh-1+"px"};if(!doc.addEventListener)return;win.addEventListener(resizeEvt,recalc,false);doc.addEventListener('DOMContentLoaded',recalc,false)})(document,window);
</script>
</head>
<body>
    <div class="wrap" id="wrap">
        <div class="content">
            <div class="text">
                <div><input type="text" placeholder="用户名" /></div>
                <div><input type="password" placeholder="密码" /></div>
            </div>
            <div class="btn">
                <div><button onclick="alert('暂未开放,请使用微信登录!')">登录</button></div><div><button onclick="alert('暂未开放,请使用微信登录!')">注册</button></div>
            </div>
            <div class="quick">
                <div>
                    <i><a href="@ViewBag.url"><img id="wx_login" src="../images/weixin.png" /></a></i>
                    <span>微信登录</span>
                </div>
                @*<div>
                    <i><img src="../images/QQ.png" /></i>
                    <span>QQ登录</span>
                </div>
                <div>
                    <i></i>
                    <span>人人登录</span>
                </div>
                <div>
                    <i></i>
                    <span>人人登录</span>
                </div>*@
            </div>
        </div>
    </div>
</body>
</html>
