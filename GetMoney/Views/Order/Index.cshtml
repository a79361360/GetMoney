@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/TestPage/dialog.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script type="text/javascript" src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script> 
    
    <link href="~/Content/TestPage/mricode.pagination.css" rel="stylesheet" />
    <script src="~/Content/TestPage/mricode.pagination.js"></script>
    <script src="~/Content/TestPage/dsdialog.js"></script>
    <script src="~/Content/TestPage/commonaction.js"></script>
</head>

<body>
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <form action="" class="bs-example bs-example-form" role="form">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group" style="float:left;">
                            <div class="btn-group" style="float: left;">
	                            <button id="field" type="button" class="btn btn-default">默认</button>
	                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="height: 34px;">
		                            <span class="caret"></span>
		                            <span class="sr-only">切换下拉菜单</span>
	                            </button>
	                            <ul class="dropdown-menu" role="menu">
                                    <li><a href="#" v_val="">默认</a></li>
		                            <li><a href="#" v_val="OrderNo">会单号</a></li>
	                            </ul>
                            </div>
                            <input id="fieldv" type="text" class="form-control" style="width: 220px;margin:0 5px" />
                        </div><!-- /input-group -->
                        <button id="search" type="button" style="float:left; margin-left:5px;" class="btn btn-default">查询</button>
                    </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
            </form>
        </div>
        <div class="panel-body">
            <div id="tblist"></div>
            <div id="page" class="m-pagination"></div>
        </div>
    </div>
</div>

 @*   <table>
        <tr>
            <td><input id="text" type="text"></td>
            <td colspan="3">
                <select id="sel">
                    <option value="OrderNo">会单号</option>
                </select>
            </td>
            <td><input id="search" type="button" style="width:80px; cursor:pointer" value="查询">@Html.Raw(ViewBag.ll)</td>
        </tr>
    </table>

    <div id="tblist"></div>
    <div id="page" class="m-pagination"></div>*@
    <script>
        $(function () {
            $("#search").click(function () {
                var isInited = $("#page").pagination();
                if (isInited) $("#page").pagination('destroy');
                var text = $("#fieldv").val();
                var type = $("#field").attr("v_val");
                $("#page").pagination({
                    firstBtnText: '首页',
                    lastBtnText: '尾页',
                    prevBtnText: '上一页',
                    nextBtnText: '下一页',
                    showInfo: true,
                    showJump: true,
                    jumpBtnText: '跳转',
                    showPageSizes: true,
                    infoFormat: '{start} ~ {end}条，共{total}条',
                    debug: true,
                    pageElementSort: ['$page', '$size', '$jump', '$info'],
                    remote: {
                        url: '/Order/ListOrderPage',  //请求地址
                        params: { text: text, type: type },       //自定义请求参数
                        success: function (data) {
                            //$("#eventLog").append(' remote callback : ' + JSON.stringify(data) + '<br />');
                            console.log(data)
                            if (data.success) {
                                var caption = "<caption><div class=\"btn-toolbar\" role=\"toolbar\">";
                                caption += "<div class=\"btn-group\"><button type=\"button\" class=\"btn btn-default\">新增</button></div>";
                                caption += "<div class=\"btn-group\"><button type=\"button\" class=\"btn btn-default\">编辑</button></div>";
                                caption += "<div class=\"btn-group\"><button type=\"button\" class=\"btn btn-default\">删除</button></div>";
                                caption += "</div></caption>";

                                //var str = "<table class=\"tablelist\"><tr><th style=\"width:61px;\">序号</th><th style=\"width:200px;\">会单ID</th><th style=\"width:80px;\">会钱发放类型</th><th>标会类型</th><th style=\"width:80px;\">最低标会金额</th><th style=\"width:61px;\">会单人数</th><th style=\"width:61px;\">会单金额</th><th style=\"width:61px;\">会单总额</th><th style=\"width:61px;\">会单状态</th><th style=\"width:121px;\">操作</th></tr>";
                                var str = "<table class=\"table table-bordered table-hover\"><thead><tr><th style=\"width:6%;\"><label class=\"checkbox-inline\"><input id=\"allqx\" type=\"checkbox\" />全选</label></th><th style=\"width:190px;\">会单ID</th><th style=\"width:80px;\">放款类型</th><th style=\"width:118px;\">标会类型</th><th style=\"width:118px;\">最低标会金额</th><th style=\"width:118px;\">会单人数</th><th style=\"width:118px;\">会单金额</th><th style=\"width:118px;\">会单总额</th><th style=\"width:80px;\">会单状态</th><th style=\"width:118px;\">操作</th></tr></thead>";
                                $.each(data.list, function (i, o) {
                                    str += "<tr><td style=\"text-align:center\"><input type=\"checkbox\"></td><td>" + o.OrderNo + "</td><td>" + o.MSType + "</td><td>" + o.MeetType + "</td><td>" + o.LowestMoney + "</td><td>" + o.PeoperNum + "</td><td>" + o.PeoperMoney + "</td><td>" + o.AllPeoperMoney + "</td><td>" + GetStateN(o.State) + "</td><td><button onclick=\"FindOrderLists(this,'" + o.OrderNo + "')\">查看</button></td></tr>";
                                })
                                str += "</table>";
                                $("#tblist").html(str);
                                $("#allqx").click(function () { togglechg(); })
                            } else {
                                $("#tblist").html("");
                            }
                        },
                        totalName: 'total'              //指定返回数据的总数据量的字段名
                    }
                });
            })
            $('.dropdown-menu a').click(function () {
                var txt = $(this).text(); var val = $(this).attr("v_val");
                var objdrop = $(this).parent().parent().siblings("button").eq(0);
                objdrop.text(txt); objdrop.attr("v_val", val);
            })
        })
        //点击全选
        togglechg = function () {
            var qx = $("#allqx");
            var tr = $("#tblist tbody tr")
            $.each(tr, function (i, e) {
                var eachobj = $(e).children("td").eq(0).find(":checkbox");
                if (qx.prop("checked")) eachobj.prop("checked", true); else eachobj.prop("checked", false);
            })
        }
        //会单状态
        GetStateN = function (v) {
            if (v == 1) return '活会';
            if (v == 2) return '死会';
            if (v == 3) return '险会';
        }
        //会单记录状态
        GetStateL = function (v) {
            if (v == 1) return '<b>已结束</b>';
            if (v == 2) return '未结束';
            if (v == 3) return '<span style=\"color:red\">异常</span>';
        }
        //Null设置为空
        GetNullEmpty = function (v) {
            if (v == null) return '';
            return v;
        }
        var listtips;
        //记录列表
        FindOrderLists = function (e, No) {
            $.ajax({
                type: "GET",
                url: '/Order/OrderLists',
                data: { orderno: No },
                dataType: 'json',
                success: function (data) {
                    //var str = "<div id=\"jl" + No + "\"><ul class=\"th\"><li>记录ID</li><li>标会日期</li><li>真实姓名</li><li>标金金额</li><li>记录状态</li><li class=\"last\">操作</li></ul>";
                    var str = "<table class=\"tablelist\" id=\"jl" + No + "\"><tr><th style=\"width:61px;\">记录ID</th><th style=\"width:160px;\">标会日期时间</th><th style=\"width:61px;\">得标人</th><th style=\"width:61px;\">得标金额</th><th style=\"width:61px;\">记录状态</th><th>操作</th></tr>";
                    var objdata = data.jsonresult;
                    if (data.success) {
                        $.each(objdata, function (i, o) {
                            var czstr = "";
                            if (o.State == "1") { czstr = "<button onclick=\"FindOrderUser('" + No + "'," + o.ID + "," + o.State + ")\">查看明细</butoon>"; }
                            if (o.State == "2") { czstr = "<button onclick=\"FindOrderUser('" + No + "'," + o.ID + "," + o.State + ")\">填写标金</butoon>"; }
                            str += "<tr><td>" + o.ID + "</td><td>" + o.MeetDate + "</td><td>" + GetNullEmpty(o.TrueName) + "</td><td>" + o.AccrualMoney + "</td><td>" + GetStateL(o.State) + "</td><td>" + czstr + "<button onclick=\"UpdateOrderListState('" + No + "'," + o.ID + "," + o.State + ")\">更新结果</butoon></td></tr>";
                        })
                        str += "</table>";
                        //$(e).parent().parent().after(str);
                        listtips = ds.dialog({ title: '会单记录', content: str, timeout: 0 });
                    } 
                }
            });
        }
        FindOrderUser = function (No, listid, state) {
            if (state == "1") {
                //明细
                $.getJSON("/Order/OrderListUsers", { listid: listid }, function (ret) {
                    if (ret.code == 1000) {
                        var str = "<table class=\"tablelist\"><tr><th style=\"width:61px;\">竞标人</th><th style=\"width:61px;\">竞标金额</th><th style=\"width:160px;\">最后提交时间</th></tr>";
                        $.each(ret.jsonresult, function (i, obj) {
                            str += "<tr><td>" + obj.TrueName + "</td><td>" + obj.AccrualMoney + "</td><td>" + obj.Lastdate + "</td></tr>";
                        })
                        str += "</table>";
                        ds.dialog({ title: '会单明细', content: str, timeout: 0 });
                    }
                });
            } if (state == "2") {
                $.getJSON("/Order/GetOrderListUserPrvMoney", { orderno: No, listid: listid }, function (ret) {
                    if (ret.code == 1000) {
                        var data = ret.jsonresult;
                        var str = "<table class=\"tablelist\"><tr><th>标金金额</th><th>最后提交时间</th><th>操作</th></tr>";
                        str += "<tr><td><input type=\"text\" style=\"text-align:center\" value=" + data.AccrualMoney + "></td><td>" + data.Lastdate + "</td><td><button onclick=\"UpdateUserMoney('" + No + "'," + listid + ",this)\">更新</butoon></td></tr>";
                        str += "</table>";
                        ds.dialog({ title: '填写标金', content: str, timeout: 0 });
                    } else {

                    }
                });
            }
            if (state == "3") {
                ds.dialog.tips("当前期无人参与竞标或者最高竞标金额少于最低竞标额!等待会头处理...", 2, true, true);
            }
        }
        //提交标金
        UpdateUserMoney = function (No, listid, e) {
            var text = $(e).parent().parent().find("input").val();
            $.getJSON("/Order/UpdateOrderListUserMoney", { orderno: No, listid: listid, money: text }, function (ret) {
                if (ret.code == 1000) {
                    console.log(ret.msg)
                }
            });
        }
        //更新结果
        UpdateOrderListState = function (No, listid, state) {
            if (state == "2") {
                $.getJSON("/Order/UpdateOrderListState", { orderno: No, listid: listid }, function (ret) {
                    if (ret.code == 1000) {
                        if (ret.jsonresult.State == "1") {
                            listtips.hide();
                            FindOrderLists(this, No);
                        }
                    }
                });
            }
        }
    </script>
</body>
</html>
